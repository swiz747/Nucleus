<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/settingsHeader">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/usersettings"
            android:id="@+id/textView15"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="40sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tab one"
            android:id="@+id/buttonOne"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/buttonTwo" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tab two"
            android:id="@+id/buttonTwo"
            android:layout_below="@+id/buttonOne"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/buttonFour" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tab three"
            android:id="@+id/buttonThree"
            android:layout_below="@+id/buttonTwo"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tab four"
            android:id="@+id/buttonFour"
            android:layout_below="@+id/buttonThree"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/buttonFive" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tab five"
            android:id="@+id/buttonFive"
            android:layout_below="@+id/buttonFour"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/buttonSix" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tab six"
            android:id="@+id/buttonSix"
            android:layout_below="@+id/buttonFive"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/buttonSeven" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tab seven"
            android:id="@+id/buttonSeven"
            android:layout_below="@+id/buttonSix"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tab eight"
            android:id="@+id/buttonEight"
            android:layout_below="@+id/buttonSeven"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/buttonSeven" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listSettings"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/buttonOne" />

    </RelativeLayout>

</LinearLayout>